	<insert id="create">
	insert into tbl_board(bno,title,content,writer,filename,filesize,oldname, regdate) 
	values(myfirst_seq.nextval,#{title},#{content},#{writer},#{filename},#{filesize},#{oldname},SYSDATE)
	
